{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": ["node"],
    "declaration": true,
    "declarationDir": "../../lib",
    "outDir": "../../lib",
    "rootDir": "."
  },
  "include": ["**/*.ts"]
}
